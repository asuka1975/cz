// 引数なし
fn zero() -> i32 {
    0
}

// 引数1つ
fn negate(x: i32) -> i32 {
    -x
}

// 引数複数
fn add(a: i32, b: i32) -> i32 {
    a + b
}

// 早期リターン
fn abs(x: i32) -> i32 {
    if x < 0 {
        return -x;
    }
    x
}

fn main() -> i32 {
    let a: i32 = zero();
    let b: i32 = negate(5);
    let c: i32 = add(1, 2);
    let d: i32 = abs(-10);
    0
}
