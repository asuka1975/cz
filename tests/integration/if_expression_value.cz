// TEST: if式の値としての使用
// EXPECT: success
// DESCRIPTION: if式が値を返し、変数束縛や関数の戻り値として使えることを検証する

fn max(a: i32, b: i32) -> i32 {
    if a > b { a } else { b }
}

fn classify(x: i32) -> i32 {
    if x > 0 {
        1
    } else if x < 0 {
        -1
    } else {
        0
    }
}

fn main() -> i32 {
    print_i32(max(10, 20));     // 20
    print_i32(classify(-5));    // -1
    print_i32(classify(0));     // 0
    print_i32(classify(3));     // 1
    0
}
