// TEST: 相互再帰
// EXPECT: success
// DESCRIPTION: 関数同士の相互再帰呼び出しが正しく動作することを検証する
// EXPECTED_EXIT_CODE: 0
// EXPECTED_STDOUT: true\ntrue\n

fn is_even(n: i32) -> bool {
    if n == 0 {
        true
    } else {
        is_odd(n - 1)
    }
}

fn is_odd(n: i32) -> bool {
    if n == 0 {
        false
    } else {
        is_even(n - 1)
    }
}

fn main() -> i32 {
    print_bool(is_even(4));   // true
    print_bool(is_odd(3));    // true
    0
}
