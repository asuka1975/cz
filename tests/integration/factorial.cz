// TEST: 再帰による階乗計算
// EXPECT: success
// DESCRIPTION: 再帰関数と早期リターンを使った階乗計算が正しく動作することを検証する
// EXPECTED_EXIT_CODE: 0
// EXPECTED_STDOUT: 120\n

fn factorial(n: i32) -> i32 {
    if n <= 1 {
        return 1;
    }
    n * factorial(n - 1)
}

fn main() -> i32 {
    print_i32(factorial(5));  // 120
    0
}
